<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_main_background">


    <FrameLayout
        android:id="@+id/frame_layout_current_month"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:layout_marginEnd="86dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_current_month"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="left|center"
            android:background="@drawable/style_current_month"
            android:text="Current month"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="5dp" />

        <TextView
            android:id="@+id/current_month_button_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:background="@drawable/style_current_month_textview"
            android:padding="2dp"
            android:text="+425LEI"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:translationZ="8dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_layout_all_months"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:layout_marginEnd="86dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_layout_current_month">

        <Button
            android:id="@+id/button_all_months"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="left|center"
            android:background="@drawable/style_current_month"
            android:text="All months"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationZ="5dp" />

        <TextView
            android:id="@+id/all_months_button_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:background="@drawable/style_current_month_textview"
            android:padding="2dp"
            android:text="+50025LEI"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:translationZ="8dp" />

    </FrameLayout>


</android.support.constraint.ConstraintLayout>