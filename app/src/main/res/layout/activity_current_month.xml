<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vertical_current_month_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".currentMonth.CurrentMonthActivity">


    <RelativeLayout
        android:id="@+id/title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/style_title_text">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="March"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:textSize="17sp"
            android:text="+ 4521LEI" />

        <TextView
            android:id="@+id/current_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="23dp"
            android:textStyle="bold"
            android:text="21.03.2018" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/simple_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>